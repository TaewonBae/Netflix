<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sub_image"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/drama_image1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedSqure" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/netflixsansbold"
            android:hint="1. 나는 네가 지난 "
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/sub_image"
            app:layout_constraintTop_toTopOf="@+id/sub_image" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/netflixsansbold"
            android:hint="1시간 2분"
            android:paddingTop="1dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@+id/sub_image"
            app:layout_constraintTop_toBottomOf="@+id/subtitle" />

        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_icon_download"
            app:layout_constraintBottom_toBottomOf="@+id/sub_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sub_image" />

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/netflixsansbold"
            android:hint="각자의 길을 간 두 사람은 어디서 무얼 하고 있을까?"
            android:paddingTop="1dp"
            android:textColor="@color/gray_light"
            android:textColorHint="@color/gray_light"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/sub_image"
            android:paddingBottom="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
